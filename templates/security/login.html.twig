<!doctype html>
<html lang="fr" >
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	{% block stylesheets %}
		<!-- Bootstrap CSS -->
		<link href="https://bootswatch.com/5/lux/bootstrap.min.css" rel="stylesheet">
		<!-- Custom CSS -->
		<link href="{{ asset('css/login.css') }}" rel="stylesheet">
	{% endblock %}
	<title>
		{% block title %}Instant Reboot • Connexion
		{% endblock %}
	</title>
</head>

{% block body %}
<body>
	<div class="left-half">
			<a href="{{ path('index') }}"><img class="logo" src="{{asset('images/logo/instantreboot.png')}}" width="100px"></img></a>
			<div class="container d-flex h-100 ">
				<div class="col my-auto" style="width:auto;">
					<div class="row">
						<div class="col-md-7 mx-auto">
						<!-- Le formulaire de connexion -->
						<form method="post">
							{% if error %}
								<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %}

							{% if app.user %}
								<div class="mb-3">
									Vous êtes connecté en tant que 
									{{ app.user.username }},
									<a href="{{ path('app_logout') }}">Logout</a>
								</div>
							{% endif %}

							<div class="form-group p-2">
								<label for="inputEmail" class="fw-bold text-white">Email</label>
								<input type="email" value="{{ last_username }}" name="email" id="inputEmail" style="width:100%" class="form-control bg-primary text-white" autocomplete="email" required autofocus>
							</div>

							<div class="form-group p-2">
								<label for="inputPassword" class="fw-bold text-white">Mot de passe</label>
								<input type="password" name="password" id="inputPassword" style="width:100%"class="form-control bg-primary text-white" autocomplete="current-password" required>
							</div>
							<hr>
							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<div class=" px-2">
								<button class="btn btn-primary w-100" type="submit" style="border-radius:10px; background-color-hover:blue;">
									Envoyer
								</button>
							</div>
							<div class="row" >
								<div class="col text-start">
									<div class="textlien pt-3 text-white" style="padding-left:10px;">
										 <a href="{{ path('app_register') }}" class="fw-bold text-decoration-none text-white">Pas encore inscrit ?</a>
									</div>
								</div>
								<div class="col text-end">
									<div class="textlien pt-3 text-white" style="padding-right:10px;">
										<a href="{{ path('app_forgot_password_request') }}" class="fw-bold text-decoration-none text-white">Mot de passe oublié ?</a>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="textlien pt-2 px-4 text-white fs-6">
									<a href="{{ path('index') }}" class="text-decoration-underline text-white">← Retour</a>
								</div>
							</div>
						</form>
						</div>
					</div>
				</div>
			</div>		
		</div>
	</div>
	<div class="right-half"></div>
</body>

{% endblock %}

{% block javascripts %}<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script><script src="https://code.jquery.com/jquery-3.6.3.min.js" integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>{% endblock %}</body></html>
