{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}Nintendo
{% endblock %}

{% block stylesheets %}
	<!-- Bootstrap CSS -->
	<link href="https://bootswatch.com/5/lux/bootstrap.min.css" rel="stylesheet">
	<!-- Custom CSS -->
	<link href="{{ asset('css/produits.css') }}" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    {{parent()}}
        <script src="{{asset('js/dropdown.js')}}"> </script>
{% endblock %}

{% block body %}
	<!--Message en bannière-->
	<div class="banner-container">
		<div class="text-white banner-text h1 pt-3" style="text-transform: none;">Nos produits de la gamme Nintendo
			<span class="px-2">
				<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="red" class="bi bi-nintendo-switch" viewbox="0 0 16 16">
					<path d="M9.34 8.005c0-4.38.01-7.972.023-7.982C9.373.01 10.036 0 10.831 0c1.153 0 1.51.01 1.743.05 1.73.298 3.045 1.6 3.373 3.326.046.242.053.809.053 4.61 0 4.06.005 4.537-.123 4.976-.022.076-.048.15-.08.242a4.136 4.136 0 0 1-3.426 2.767c-.317.033-2.889.046-2.978.013-.05-.02-.053-.752-.053-7.979Zm4.675.269a1.621 1.621 0 0 0-1.113-1.034 1.609 1.609 0 0 0-1.938 1.073 1.9 1.9 0 0 0-.014.935 1.632 1.632 0 0 0 1.952 1.107c.51-.136.908-.504 1.11-1.028.11-.285.113-.742.003-1.053ZM3.71 3.317c-.208.04-.526.199-.695.348-.348.301-.52.729-.494 1.232.013.262.03.332.136.544.155.321.39.556.712.715.222.11.278.123.567.133.261.01.354 0 .53-.06.719-.242 1.153-.94 1.03-1.656-.142-.852-.95-1.422-1.786-1.256Z"/>
					<path d="M3.425.053a4.136 4.136 0 0 0-3.28 3.015C0 3.628-.01 3.956.005 8.3c.01 3.99.014 4.082.08 4.39.368 1.66 1.548 2.844 3.224 3.235.22.05.497.06 2.29.07 1.856.012 2.048.009 2.097-.04.05-.05.053-.69.053-7.94 0-5.374-.01-7.906-.033-7.952-.033-.06-.09-.063-2.03-.06-1.578.004-2.052.014-2.26.05Zm3 14.665-1.35-.016c-1.242-.013-1.375-.02-1.623-.083a2.81 2.81 0 0 1-2.08-2.167c-.074-.335-.074-8.579-.004-8.907a2.845 2.845 0 0 1 1.716-2.05c.438-.176.64-.196 2.058-.2l1.282-.003v13.426Z"/>
				</svg>
			</span>
		</div>
	</div>
	<!---->

	<div style="margin-bottom:200px;">
		<div class="container my-4">
			<!--Barre de recherche-->
			<div class="d-flex flex-column align-items-center justify-content-center my-4">
				<form class="py-4 w-100" id='recherche' style="width: 40%;" action="{{ path('search-nintendo') }}" method="get">
					<div class="input-group">
						<input class="form-control bg-primary text-white px-3 text-center" type="text" placeholder="Minecraft, Carte playstation, RPG..." name="search-input"/>
						<a onclick="effacerFormulaire()">
							<div class="input-group-prepend">
								<span id="backspace-btn" class="input-group-text bg-primary rounded-right">
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-backspace-fill" viewbox="0 0 16 16"><path d="M15.683 3a2 2 0 0 0-2-2h-7.08a2 2 0 0 0-1.519.698L.241 7.35a1 1 0 0 0 0 1.302l4.843 5.65A2 2 0 0 0 6.603 15h7.08a2 2 0 0 0 2-2V3zM5.829 5.854a.5.5 0 1 1 .707-.708l2.147 2.147 2.146-2.147a.5.5 0 1 1 .707.708L9.39 8l2.146 2.146a.5.5 0 0 1-.707.708L8.683 8.707l-2.147 2.147a.5.5 0 0 1-.707-.708L7.976 8 5.829 5.854z"/>
									</span>
								</div>
							</a>
							<script>
								function effacerFormulaire() {
									document.getElementById("recherche").reset();
								}
							</script>
						</div>
					</form>
					<div class="d-flex px-4 align-items-center">
						<div class="d-flex px-4 align-items-center">
							<div class="dropdown">
								<button id="dropdownText" class="btn btn-primary fs-bold fs-5 px-5 dropdown-toggle" style="text-transform:none;border-radius:50px; height:50px;" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
									<span>Trier par</span>
								</button>
								<ul class="dropdown-menu fs-5" style="border-radius:15px; background-color:#272727;" aria-labelledby="dropdownMenuButton1">
									<li>
										<a id="priceAscendingOption" class="dropdown-item text-white" href="{{path('nintendo-search-by-price-asc')}}?sort=asc" onclick="setDropdownText('Prix ( croissant )')">Prix ( croissant )</a>
									</li>
									<li>
										<a id="priceDescendingOption" class="dropdown-item text-white" href="{{path('nintendo-search-by-price-desc')}}?sort=desc" onclick="setDropdownText('Prix ( décroissant )')">Prix ( décroissant )</a>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
				<!---->
				<div class="row justify-content-start py-4">
					{% for produit in produits %}
						<div class="col-md-4 p-0">
							<div class="item">
								<a href="{{ path('leproduit', {'id': produit.id, 'designation': produit.designation}) }}">
									<picture>
										<img class="picture" src="images/produits/{{produit.image}}" style="max-width: 100%;">
									</picture>
								</a>
								<div class="information">
									<div class="text">
										<div class="name">
											<span class="title">{{ produit.designation }}</span>
										</div>
									</div>
									<div class="price px-2">{{ produit.prix }}€</div>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>

	{% endblock %}
